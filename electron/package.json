{
  "name": "options-scanner",
  "version": "1.0.0",
  "description": "Options Analysis and Paper Trading Desktop Application",
  "main": "src/main.js",
  "author": "Options Scanner",
  "license": "MIT",
  "homepage": "https://github.com/your-repo/options-scanner",
  "repository": {
    "type": "git",
    "url": "https://github.com/your-repo/options-scanner.git"
  },
  "scripts": {
    "start": "electron .",
    "dev": "cross-env NODE_ENV=development electron .",
    "build": "electron-builder",
    "build:win": "electron-builder --win",
    "build:mac": "electron-builder --mac",
    "build:linux": "electron-builder --linux",
    "build:all": "electron-builder --win --mac --linux",
    "pack": "electron-builder --dir",
    "postinstall": "electron-builder install-app-deps",
    "check-updates": "node scripts/check-updates.js",
    "verify-signing": "bash scripts/verify-signing.sh"
  },
  "dependencies": {
    "electron-updater": "^6.1.7",
    "electron-log": "^5.0.3",
    "electron-store": "^8.1.0"
  },
  "devDependencies": {
    "@electron/notarize": "^2.2.0",
    "electron": "^28.1.0",
    "electron-builder": "^24.9.1",
    "cross-env": "^7.0.3"
  },
  "build": {
    "appId": "com.optionsscanner.app",
    "productName": "Options Scanner",
    "copyright": "Copyright Â© 2024 Options Scanner",
    "directories": {
      "output": "dist",
      "buildResources": "assets"
    },
    "files": [
      "src/**/*",
      "assets/**/*",
      "node_modules/**/*",
      "package.json"
    ],
    "extraResources": [
      {
        "from": "../backend",
        "to": "backend",
        "filter": ["**/*", "!__pycache__/**", "!*.pyc"]
      },
      {
        "from": "../frontend/build",
        "to": "frontend/build",
        "filter": ["**/*"]
      },
      {
        "from": "../docker-compose.yml",
        "to": "docker-compose.yml"
      },
      {
        "from": "../Dockerfile",
        "to": "Dockerfile"
      }
    ],
    "publish": [
      {
        "provider": "github",
        "owner": "your-repo",
        "repo": "options-scanner",
        "releaseType": "release"
      }
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": ["x64"]
        },
        {
          "target": "portable",
          "arch": ["x64"]
        }
      ],
      "icon": "assets/icon.ico",
      "artifactName": "${productName}-${version}-${os}-${arch}.${ext}",
      "signingHashAlgorithms": ["sha256"],
      "signDlls": true,
      "publisherName": "Options Scanner"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "Options Scanner",
      "installerIcon": "assets/icon.ico",
      "uninstallerIcon": "assets/icon.ico",
      "installerHeaderIcon": "assets/icon.ico",
      "license": "LICENSE.md"
    },
    "mac": {
      "target": [
        {
          "target": "dmg",
          "arch": ["x64", "arm64"]
        },
        {
          "target": "zip",
          "arch": ["x64", "arm64"]
        }
      ],
      "icon": "assets/icon.icns",
      "category": "public.app-category.finance",
      "hardenedRuntime": true,
      "gatekeeperAssess": false,
      "entitlements": "assets/entitlements.mac.plist",
      "entitlementsInherit": "assets/entitlements.mac.plist",
      "artifactName": "${productName}-${version}-${os}-${arch}.${ext}"
    },
    "dmg": {
      "contents": [
        {
          "x": 130,
          "y": 220
        },
        {
          "x": 410,
          "y": 220,
          "type": "link",
          "path": "/Applications"
        }
      ],
      "window": {
        "width": 540,
        "height": 380
      }
    },
    "linux": {
      "target": [
        {
          "target": "AppImage",
          "arch": ["x64"]
        },
        {
          "target": "deb",
          "arch": ["x64"]
        },
        {
          "target": "rpm",
          "arch": ["x64"]
        }
      ],
      "icon": "assets/icons",
      "category": "Finance",
      "synopsis": "Options Analysis and Paper Trading",
      "description": "A comprehensive options analysis and paper trading application",
      "artifactName": "${productName}-${version}-${os}-${arch}.${ext}"
    }
  }
}
